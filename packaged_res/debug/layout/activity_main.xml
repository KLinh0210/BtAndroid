<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.bai_1.MainActivity">

    <RelativeLayout
        android:id="@+id/palette"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:id="@+id/view"
            android:background="@color/blue"
            android:tag="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            android:layout_toEndOf="@+id/view2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view2">

        </View>

        <View
            android:id="@+id/view1"
            android:layout_width="100dip"
            android:layout_height="200dip"
            android:background="@color/red"
            android:tag="@color/red"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </View>

        <View
            android:id="@+id/view2"
            android:layout_width="150dip"
            android:layout_height="300dip"
            android:background="@color/green"
            android:tag="@color/green"
            android:layout_alignBottom="@+id/view5"
            android:layout_toRightOf="@+id/view1">

        </View>

        <View
            android:id="@+id/view3"
            android:background="@color/purple"
            android:tag="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            android:layout_below="@+id/view2"
            android:layout_toEndOf="@+id/view4"
            android:layout_toRightOf="@+id/view4">

        </View>

        <View
            android:id="@+id/view4"
            android:background="@color/orange"
            android:layout_width="170dip"
            android:layout_height="wrap_content"
            android:tag="@color/orange"
            android:layout_toEndOf="@+id/view2"
            android:layout_toRightOf="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view2">

        </View>

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            android:background="@color/yellow"
            android:tag="@color/yellow"
            android:layout_toEndOf="@+id/view2"
            android:layout_toRightOf="@+id/view2"
            android:layout_below="@+id/view">

        </View>

        <View
            android:id="@+id/view6"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:background="@color/white"
            android:tag="@color/white"
            android:layout_toEndOf="@+id/view2"
            android:layout_toRightOf="@+id/view2"
            android:layout_below="@+id/view1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/view2"
            android:layout_toStartOf="@+id/view2">

        </View>

        <View
            android:id="@+id/view7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/indigo"
            android:tag="@color/indigo"
            android:layout_toEndOf="@+id/view4"
            android:layout_below="@+id/view3"
            android:layout_toRightOf="@+id/view4">

        </View>
    </RelativeLayout>


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignBottom="@id/palette"
        android:background="@color/black" />

    <Button
        android:id="@+id/change2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="632dp"
        android:layout_marginBottom="50dp"
        android:background="@color/red"
        android:text="ChangeLayout"></Button>



</RelativeLayout>